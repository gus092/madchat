<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="44dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/people" />

        <ImageView
            android:id="@+id/textView6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="136dp"
            android:clickable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/gallery1"></ImageView>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="270dp"
            android:layout_height="48dp"

            android:layout_marginStart="124dp"

            android:layout_marginLeft="124dp"
            android:layout_marginTop="44dp"
            android:fontFamily="@font/arca"
            android:singleLine="true"
            android:text=" Nickname"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <EditText
            android:id="@+id/name_edit2"
            android:layout_width="199dp"
            android:layout_height="61dp"

            android:layout_marginStart="124dp"

            android:layout_marginLeft="124dp"

            android:layout_marginTop="48dp"
            android:fontFamily="@font/arca"
            android:hint="Input"
            android:singleLine="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></EditText>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="169dp"
            android:layout_height="34dp"
            android:layout_marginStart="120dp"

            android:layout_marginLeft="120dp"

            android:layout_marginTop="132dp"
            android:fontFamily="@font/arca"
            android:text=" Profile Photo"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <Button
            android:id="@+id/choose_gallery"
            android:layout_width="89dp"
            android:layout_height="32dp"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="120dp"

            android:layout_marginTop="160dp"
            android:background="@drawable/button_background3"
            android:fontFamily="@font/arca"
            android:text="Gallery"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/rotate_button"
            android:layout_width="37dp"
            android:layout_height="35dp"
            android:layout_marginStart="224dp"
            android:layout_marginLeft="224dp"
            android:layout_marginTop="160dp"
            android:src="@drawable/rotate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/backimage"
            android:layout_width="330dp"
            android:layout_height="166dp"
            android:background="@drawable/button_background"
            app:layout_constraintBottom_toBottomOf="@+id/chosenpicture"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/chosenpicture" />

        <ImageView
            android:id="@+id/chosenpicture"
            android:layout_width="158dp"
            android:layout_height="158dp"
            android:layout_marginTop="240dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/joinbutton"
            android:layout_width="330dp"
            android:layout_height="52dp"
            android:layout_marginTop="420dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/arca"
            android:text="Join Chat Room #1"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/joinbutton2"
            android:layout_width="330dp"
            android:layout_height="53dp"

            android:layout_marginTop="492dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/arca"
            android:text="Join Chat Room #2"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>